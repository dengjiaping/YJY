                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".module.product.SearchActivity" >
        </activity>
        <activity
            android:name=".module.main.MainActivity"
