<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButtonLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_medium</item>
        <item name="android:layout_marginLeft">@dimen/spacing_huge</item>
        <item name="android:layout_marginRight">@dimen/spacing_huge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MoreItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
        <item name="android:textAppearance">@style/TextBody</item>
        <item name="android:drawableRight">@mipmap/ic_more</item>
        <item name="android:drawableEnd">@mipmap/ic_more</item>
    </style>

    <style name="SuperTextAsk">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/text_ask</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_caption_material</item>
        <item name="com.miguan.yjy:corner">2dp</item>
        <item name="com.miguan.yjy:solid">@color/bgAsk</item>
    </style>

    <style name="SuperTextAskAnswer" parent="SuperTextAsk">
        <item name="android:text">@string/text_answer</item>
        <item name="com.miguan.yjy:solid">@color/bgAnswer</item>
    </style>

    <style name="SuperTextAskNoAnswer" parent="SuperTextAsk">
        <item name="android:text">@string/text_answer</item>
        <item name="com.miguan.yjy:solid">#b8b8b8</item>
    </style>

</resources>