<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_large"
    android:paddingTop="@dimen/spacing_large"
    >

    <com.miguan.yjy.widget.ClearEditText
        android:id="@+id/et_template_header"
        style="@style/BaseTemplateInput"
        android:text="@string/text_template_1_title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_large_material"
        />

    <com.miguan.yjy.widget.ClearEditText
        android:id="@+id/et_template_header_2"
        style="@style/BaseTemplateInput"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/text_template_1_desc"
        android:textAppearance="@style/TextCaption"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_template_1_decoration"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/ic_template_1_decoration"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        />

</LinearLayout>