<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_test_ok"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/include_status_bar" />

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        style="@style/TitleToolbar"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        >

        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/text_test"
            />

    </android.support.v7.widget.Toolbar>

    <com.miguan.yjy.widget.CustomNestedScrollView
        android:id="@+id/custom_scv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:id="@+id/ll_test_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="35dp"
                    android:paddingTop="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_test_first_letter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_shape_main_color_white_5"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            tools:text="D"
                            />

                        <TextView
                            android:id="@+id/tv_test_first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="轻干"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_small_14"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_test_second_letter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_shape_main_color_white_5"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_test_second_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="轻干"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_small_14"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_test_third_letter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_shape_main_color_white_5"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_test_third_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="轻干"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_small_14"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_test_four_letter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_shape_main_color_white_5"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_test_four_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="轻干"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_size_small_14"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:text="@string/text_test_feature"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_size_small_16"
                    />

                <TextView
                    android:id="@+id/tv_test_result_descirbe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textSecondary"
                    tools:text="描述1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:text="@string/text_test_explain"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_size_small_16"
                    />

                <TextView
                    android:id="@+id/tv_test_result_descirbe_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:textColor="@color/textSecondary"
                    tools:text="描述2"
                    />

            </LinearLayout>

            <View style="@style/ItemLineHeight"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_test_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/ic_test_grade"
                        android:drawablePadding="10dp"
                        android:drawableStart="@mipmap/ic_test_grade"
                        android:text="@string/text_test_grade"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_small_14"
                        />

                </LinearLayout>

                <View
                    style="@style/ItemLineHeight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    />

                <LinearLayout
                    android:id="@+id/ll_test_again"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/ic_test_again"
                        android:drawablePadding="10dp"
                        android:text="@string/text_test_again"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_small_14"/>

                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/ItemLineHeight"
                android:layout_height="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/text_test_list"
                android:textColor="@color/f3"
                android:textSize="@dimen/text_size_small_15"
                android:textStyle="bold"
                />

            <View style="@style/ItemLineHeight"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rect_test_my_skin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <!--<Space-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/spacing_small"-->
            <!--/>-->

            <!--<include-->
            <!--layout="@layout/include_head_article"-->
            <!--/>-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_test_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/spacing_small"
                />

        </LinearLayout>

    </com.miguan.yjy.widget.CustomNestedScrollView>

</LinearLayout>