<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/spacing_normal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_query_title_1"
                        android:textAppearance="@style/TextSubhead"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:lineSpacingMultiplier="1.4"
                        android:text="@string/text_query_content_1"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:background="@color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/spacing_normal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_query_title_2"
                        android:textAppearance="@style/TextSubhead"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:lineSpacingMultiplier="1.4"
                        android:text="@string/text_query_content_2"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@mipmap/def_image_loading"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/image_instruction_1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.4"
                        android:text="@string/text_query_content_2_2"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@mipmap/def_image_loading"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/image_instruction_2"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:background="@color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/spacing_normal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_query_title_3"
                        android:textAppearance="@style/TextSubhead"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:lineSpacingMultiplier="1.4"
                        android:text="@string/text_query_content_3"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:background="@color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/spacing_normal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_query_title_4"
                        android:textAppearance="@style/TextSubhead"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:lineSpacingMultiplier="1.4"
                        android:text="@string/text_query_content_4"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@mipmap/def_image_loading"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/image_instruction_3"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@mipmap/def_image_loading"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/image_instruction_4"
                        />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:background="@mipmap/def_image_loading"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/image_instruction_5"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>