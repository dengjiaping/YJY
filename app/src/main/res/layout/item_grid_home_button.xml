<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_home_batch"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/iv_home_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/widget_tiny"
        android:layout_marginStart="@dimen/widget_tiny"
        android:background="@drawable/bg_oval_window"
        tools:src="@mipmap/ic_home_batch"
        />

    <com.miguan.yjy.widget.LoadingTextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_home_icon"
        android:layout_toRightOf="@id/iv_home_icon"
        android:ems="4"
        android:textColor="@color/f3"
        android:textSize="@dimen/text_size_body"
        app:height_weight="0.7"
        tools:text="@string/text_query_production_date"
        />

    <com.miguan.yjy.widget.LoadingTextView
        android:id="@+id/tv_home_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_home_title"
        android:layout_alignStart="@id/tv_home_title"
        android:layout_below="@id/tv_home_title"
        android:layout_marginTop="4dp"
        android:ems="8"
        android:textColor="@color/textTertiary2"
        android:textSize="@dimen/text_size_tiny"
        app:height_weight="0.7"
        tools:text="最全的护肤品库"
        />

</RelativeLayout>