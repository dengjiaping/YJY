<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_large"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingRight="@dimen/spacing_large"
    android:paddingTop="@dimen/spacing_normal"
    >

    <TextView
        android:id="@+id/tv_evaluate_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextCaption"
        tools:text="2017-03-08 13:20:00"
        />

    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:textAppearance="@style/TextBody"
        tools:text="sssss记得哈空间逛哈空间是个哈喽科技股好卡ss吉林森工航空烈士骨灰sssss记得哈空间逛哈空间是个哈喽科技股好卡ss吉林森工航空烈士骨灰sssss记得哈空间逛哈空间是个哈喽科技股好卡ss吉林森工航空烈士骨灰"
        />

    <TextView
        android:id="@+id/tv_evaluate_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_size_body_material"
        tools:text="查看全文"
        />

    <LinearLayout
        android:id="@+id/ll_evaluate_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@drawable/bg_stroke_product"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_small"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_evaluate_product_img"
            android:layout_width="98dp"
            android:layout_height="98dp"
            style="@style/BaseImage"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_evaluate_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAppearance="@style/TextSubhead"
                tools:text="奇才苦蘮索罗斯蘮索罗斯f雷暴虽基材奇才苦蘮索罗斯f雷暴虽基材奇才苦蘮索罗斯f雷暴虽基材奇才苦"
                />

            <RatingBar
                android:id="@+id/tv_evaluate_product_rating"
                style="@style/MySmallRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:isIndicator="true"
                android:saveEnabled="false"
                />

            <TextView
                android:id="@+id/tv_evaluate_product_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextCaption"
                tools:text="￥320/100ML"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>