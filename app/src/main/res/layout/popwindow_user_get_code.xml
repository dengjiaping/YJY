<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/half_transparent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tv_user_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="25dp"
        android:text="@string/text_user_get_code"
        android:textColor="@color/color_sencond_title"
        android:textSize="@dimen/text_size_large_20"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="50dp">

            <EditText
                android:id="@+id/et_user_dialog_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@color/color_sencond_title"
                android:textSize="@dimen/text_size_small_16"
                />

            <View
                style="@style/ItemLineHeight"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="50dp">

            <EditText
                android:id="@+id/et_user_dialog_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/color_sencond_title"
                android:textSize="@dimen/text_size_small_16"
                />

            <View
                style="@style/ItemLineHeight"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="50dp">

            <EditText
                android:id="@+id/et_user_dialog_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@color/color_sencond_title"
                android:textSize="@dimen/text_size_small_16"
                />

            <View
                style="@style/ItemLineHeight"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="50dp">

            <EditText
                android:id="@+id/et_user_dialog_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@color/color_sencond_title"
                android:textSize="@dimen/text_size_small_16"
                />

            <View
                style="@style/ItemLineHeight"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>


    <View
        style="@style/ItemLineHeight"
        android:layout_marginTop="45dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_user_previous"
            android:textColor="@color/color_sencond_title"
            android:textSize="@dimen/text_size_small_16"/>

        <View
            style="@style/ItemLineHeight"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <com.miguan.yjy.widget.SendValidateButton
            android:id="@+id/btn_user_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/btn_user_again"
            android:textColor="@color/f32d"
            android:textSize="@dimen/text_size_small_16"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>