<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="20dp"
              android:paddingBottom="40dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:background="@color/white"
              android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_test_list"
        style="@style/BaseImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:failureImage="@mipmap/def_image_product"
        app:placeholderImage="@mipmap/def_image_product"
        />

    <LinearLayout
        android:id="@+id/ll_test_more"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/f5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            style="@style/BaseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="查看更多"
            android:textColor="@color/fB2"
            android:textSize="@dimen/text_size_micro_12"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@mipmap/ic_skin_test_more"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_test_brand_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="品牌名称"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/text_size_small_13"/>
    <TextView
        android:id="@+id/tv_test_list_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center"
        android:text="@string/slide_show"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/text_size_small_13"/>

</LinearLayout>