<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_test_list"
        style="@style/BaseImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:failureImage="@mipmap/def_image_product"
        app:placeholderImage="@mipmap/def_image_product"
        />

    <include layout="@layout/include_item_more" />

    <TextView
        android:id="@+id/tv_test_brand_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="品牌名称"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/text_size_small_13"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_test_list_name"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/slide_show"
        android:textColor="@color/textTertiary"
        android:textSize="@dimen/text_size_small_13"
        />

</LinearLayout>