<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/img_product_detail_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/f5" />

        <LinearLayout
            android:id="@+id/ll_product_detail_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_product_detail_user_avatar"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_product_detail_user_avatar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_detail_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/color_sencond_title"
                android:textSize="@dimen/text_size_small_15" />

            <TextView
                android:id="@+id/tv_product_detail_user_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="年龄"
                android:textColor="@color/f6"
                android:textSize="@dimen/text_size_micro_11" />

            <TextView
                android:id="@+id/tv_product_detail_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_product_detail_like_no"
                android:drawablePadding="5dp"
                android:text="赞"
                android:textColor="@color/f9"
                android:textSize="@dimen/text_size_caption_material" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_detail_skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_product_detail_user_info"
            android:layout_below="@+id/ll_product_detail_user_info"
            android:layout_marginTop="10dp"
            android:text="清干 | 重敏 | 非色素 | 紧致"
            android:textColor="@color/f9"
            android:textSize="@dimen/text_size_small_14" />

        <TextView
            android:id="@+id/tv_product_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ll_product_detail_user_info"
            android:layout_below="@+id/tv_product_detail_skin"
            android:layout_marginTop="15dp"
            android:text="sssss记得哈空间逛哈空间是个哈喽科技股好卡ss吉林森工航空烈士骨灰"
            android:textSize="@dimen/text_size_small_14" />

        <View
            style="@style/ItemLineHeight"
            android:layout_alignLeft="@+id/ll_product_detail_user_info"
            android:layout_below="@+id/tv_product_detail_content"
            android:layout_marginTop="25dp"></View>

    </RelativeLayout>


</LinearLayout>