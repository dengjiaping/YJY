<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        >

        <com.miguan.yjy.widget.HeadViewPager
            android:id="@+id/hv_home_banner"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            />

        <com.miguan.yjy.widget.CirclePageIndicator
            android:id="@+id/indicator_main_home"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="8dp"
            />

    </FrameLayout>

    <com.jude.exgridview.ExGridView
        android:id="@+id/gv_home_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:grid_column="2"
        app:grid_as_square="false"
        app:grid_divider_horizontal="1dp"
        app:grid_divider_vertical="1dp"
        />

    <com.miguan.yjy.widget.LoadingImageView
        android:id="@+id/iv_home_evaluate_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:minWidth="70dp"
        android:scaleType="centerInside"
        />

</LinearLayout>