<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >

        <View
            android:layout_width="3dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="肤质护理难度"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"
            />

    </LinearLayout>
    <!--style="?android:attr/ratingBarStyle"-->
    <!--<RatingBar-->
    <!--android:id="@+id/ratbar_skin"-->
    <!--style="@style/MyMaxRatingBar"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginBottom="35dp"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:isIndicator="true"/>-->
    <com.miguan.yjy.widget.RatingBar
        android:id="@+id/ratbar_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView"
        android:isIndicator="true"
        app:starCount="5"
        app:starEmpty="@mipmap/ic_start_no_select"
        app:starFill="@mipmap/ic_start_selected"
        app:starImageSize="30dp"
        app:starPadding="5dp"
        app:starStep="2.5"
        app:stepSize="Half"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >

        <View
            android:layout_width="3dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/text_test_feature"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"
            />

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_skin_guide_feature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="20dp"
        android:textColor="@color/f6"
        android:textSize="@dimen/text_size_small_14"
        tools:text="描述1"
        />


    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >

        <View
            android:layout_width="3dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/text_test_explain"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"
            />

    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_skin_guide_descirbe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="20dp"
        android:textColor="@color/f6"
        android:textSize="@dimen/text_size_small_14"
        tools:text="描述2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        >

        <View
            android:layout_width="3dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="护肤百科"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"
            />

    </LinearLayout>


</LinearLayout>