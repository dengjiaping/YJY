<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingRight="@dimen/spacing_large"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_template_0_image_0"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_gravity="center"
            app:placeholderImage="@mipmap/def_image_template"
            app:placeholderImageScaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/iv_template_0_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/spacing_normal"
            android:src="@mipmap/ic_filter"
            />

    </FrameLayout>

    <com.jude.exgridview.ExGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_normal"
        app:grid_column="3"
        app:grid_divider_horizontal="@dimen/spacing_normal"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_template_0_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:placeholderImage="@mipmap/def_image_template"
            app:placeholderImageScaleType="centerCrop"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_template_0_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:placeholderImage="@mipmap/def_image_template"
            app:placeholderImageScaleType="centerCrop"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_template_0_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:placeholderImage="@mipmap/def_image_template"
            app:placeholderImageScaleType="centerCrop"
            />

    </com.jude.exgridview.ExGridView>

    <TextView
        android:id="@+id/tv_template_0_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/text_template_1_content"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_size_subhead_material"
        />

</LinearLayout>