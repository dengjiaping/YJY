<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_large"
        >

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            tools:text="适合敏感皮吗？适合敏感皮吗？适合敏感皮吗？适合敏感皮吗？"
            />

        <com.miguan.yjy.widget.SuperTextView
            android:id="@+id/btn_question_to_ask"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center"
            android:text="@string/btn_to_ask"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_body_material"
            app:corner="@dimen/widget_medium"
            app:stroke_color="@color/colorPrimary"
            app:stroke_width="1dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ask_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_ask_item_1"
        />

</android.support.v7.widget.CardView>
