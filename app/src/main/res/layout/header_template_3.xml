<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_template_3_header"
    android:focusableInTouchMode="true"
    android:focusable="true"
    >

    <com.miguan.yjy.widget.ClearEditText
        android:id="@+id/et_template_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:inputType="text"
        android:maxLines="1"
        android:minWidth="88dp"
        android:text="@string/text_template_3_header"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title_material"
        />

</FrameLayout>