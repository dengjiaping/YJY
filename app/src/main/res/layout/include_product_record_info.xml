<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_product_include_remark_info"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:visibility="gone"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:text="@string/tv_product_detail_read"-->
        <!--android:textColor="@color/textPrimary"-->
        <!--android:textSize="@dimen/text_size_small_14"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_product_detail_record_inf0"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"/>

        <TextView
            android:id="@+id/tv_product_detail_record_inf0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="国家药监局进口备案"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_small_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_product_detail_record_document_number"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"/>

        <TextView
            android:id="@+id/tv_product_detail_provision_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_small_14"
            tools:text="粤G妆网备字2014009024"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_product_detail_country"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"/>

        <TextView
            android:id="@+id/tv_product_detail_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_small_14"
            tools:text="中国"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_product_detail_company"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_small_14"/>

        <TextView
            android:id="@+id/tv_product_detail_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_size_small_14"
            tools:text="广东真丽斯化妆品有限公司"
            />

    </LinearLayout>
</LinearLayout>